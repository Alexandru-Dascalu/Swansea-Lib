<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.RelatedRsrcController">
   <center>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" vbarPolicy="ALWAYS">
         <content>
            <VBox fx:id="resourcesVBox" prefHeight="400.0" prefWidth="600.0" />
         </content>
      </ScrollPane>
   </center>
   <bottom>
      <Button fx:id="saveBtn" mnemonicParsing="false" onMouseClicked="#saveRelated" text="Save Related Resources" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <BorderPane.margin>
            <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
</BorderPane>
